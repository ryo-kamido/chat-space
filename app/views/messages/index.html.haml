.wrapper
  = render 'groups/side_bar'
  .chat
    .header
      .now_groupname
        %h3
          = @group.name
      .member
        %h3
          Member: #{@group.users[0].name}
    .message-box
      .message_area
        = render @messages
      .post-box
        = form_for [@group,@message] do |f|
          = f.text_field :content, class: 'text', placeholder: 'type a message'
          .image_form
            = f.label :image do
              %i.fa.fa-image
                = f.file_field :image, class: 'hiden'
          = f.submit 'Send', class: 'send'
